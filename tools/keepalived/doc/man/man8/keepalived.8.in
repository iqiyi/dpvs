[\fB\-l\fP|\fB\-\-log\-console\fP]
[\fB\-D\fP|\fB\-\-log\-detail\fP]
[\fB\-S\fP|\fB\-\-log\-facility\fP={0-7}]
[\fB\-g\fP|\fB\-\-log\-file\fP=FILE]
[\fB\-\-flush\-log\-file\fP]
[\fB\-G\fP|\fB\-\-no\-syslog\fP]
