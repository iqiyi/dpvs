+	} else if (!strcmp(value, "icmp")) {
+		pt->filter->proto = IPPROTO_ICMP;
+	} else {
+		printf("invalid value:\"%s\" for key:\"%s\", "
+			"value must be tcp/udp/icmp\n", value, key);
+		return -EINVAL;
+	}
+
+	return 0;
+}
